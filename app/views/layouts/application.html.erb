<!DOCTYPE html>
<html>
  <head>
    <title>RailsHtdAcademyBackend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-warning" %>
    <% end %>

    <% if flash[:notice]  %>
    <div class="alert alert-info">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:error]  %>
    <div class="alert alert-danger">
      <%=  flash[:error] %>
    </div>
  <% end %>

  <%= button_to('New Patient', new_patient_path, method: :get, class: 'btn btn-primary') if current_user %>

    <%= yield %>
  </body>
</html>
